<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Memory Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distinguish Code"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Length (Default: 16)"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBoxRemovePunctuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Punctuation" />

    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Password" />

    <TextView
        android:id="@+id/textViewGeneratedPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:text="Generated Password"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy to Clipboard" />
</LinearLayout>
